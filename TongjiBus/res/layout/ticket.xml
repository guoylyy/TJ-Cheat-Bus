<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tj_pic_titlebar"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车票"
            android:textSize="20sp" 
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:textColor="#FFF"
            android:background="@drawable/tj_pic_btnbg"
            android:textSize="16sp" 
            android:text=" 返回" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/imageLayout1"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:layout_below="@+id/titleLayout" >

        <TextView
            android:id="@+id/streamNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="流水号：201405191358401811007" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:text="王劲鹏"
            android:textSize="22sp"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:text="1336315"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:text="2014-05-20 16:00"
            android:textColor="#FF0000" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/imageLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_below="@+id/imageLayout1" 
        android:background="#FFF">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dip"
            android:text="四平"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dip"
            android:layout_centerVertical="true"
            android:text="嘉定"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="中环直达" />
		
        
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip"
            android:layout_marginTop="30dip"
            android:max="100" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dip"
            android:src="@drawable/tj_pic_bus" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout3"
        android:layout_width="match_parent"
        android:layout_height="230dip" 
        android:padding="12dip"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tj_pic_jiading_to_other"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>